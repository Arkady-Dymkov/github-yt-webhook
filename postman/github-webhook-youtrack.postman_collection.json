                    "raw": "{\n    \"action\": \"opened\",\n    \"pull_request\": {\n        \"title\": \"ABC-123: Fix critical bug\",\n        \"number\": 42,\n        \"html_url\": \"https://github.com/yourusername/repo/pull/42\",\n        \"user\": {\n            \"login\": \"developer\"\n        },\n        \"body\": \"This PR fixes a critical bug in the authentication system.\"\n    },\n    \"repository\": {\n        \"full_name\": \"yourusername/repo\"\n    }\n}",
